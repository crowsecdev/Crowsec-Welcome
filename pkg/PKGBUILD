pkgname=crowsecos-welcome
pkgdesc='Welcome screen for Namib'
pkgver=1.0.0
pkgrel=1
arch=('any')
url="https://github.com/crowsecdev/Crowsec-Welcome"
license=('GPL')
makedepends=('git')
depends=('python3' 'python-pyqt5')
source=("git+$url.git")
sha256sums=('SKIP')

package() {
    install -d ${pkgdir}/usr/share/crowsecos-welcome
    install -d ${pkgdir}/usr/share/applications
    install -d ${pkgdir}/usr/bin
    install -d ${pkgdir}/etc/skel/.config/autostart

    cp -r ${srcdir}/crowsecos-welcome/src/img/ "${pkgdir}/usr/share/crowsecos-welcome/img/"

    cp -r ${srcdir}/crowsecos-welcome/src/crowsecos-welcome.py "${pkgdir}/usr/bin/crowsecos-welcome"
    chmod +x "${pkgdir}/usr/bin/crowsecos-welcome"

    cp -r ${srcdir}/crowsecos-welcome/src/crowsecos-welcome.desktop "${pkgdir}/etc/skel/.config/autostart/crowsecos-welcome.desktop"
    chmod +x "${pkgdir}/etc/skel/.config/autostart/crowsecos-welcome.desktop"

    cp -r ${srcdir}/crowsecos-welcome/src/crowsecos-welcome.desktop "${pkgdir}/usr/share/applications/crowsecos-welcome.desktop"
}