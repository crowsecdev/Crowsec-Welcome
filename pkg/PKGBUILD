pkgname=crowsecos-welcome
pkgdesc='Welcome screen for Namib'
pkgver=1.0.0
pkgrel=1
arch=('any')
url="https://github.com/crowsecdev/Crowsec-Welcome"
license=('GPL')
makedepends=('git')
depends=('python3' 'python-pyqt5')
source=("git+$url.git")
sha256sums=('SKIP')

package() {
    install -d ${pkgdir}/usr/share/Crowsec-Welcome
    install -d ${pkgdir}/usr/share/applications
    install -d ${pkgdir}/usr/bin
    install -d ${pkgdir}/etc/skel/.config/autostart

    cp -r ${srcdir}/Crowsec-Welcome/src/img/ "${pkgdir}/usr/share/Crowsec-Welcome/img/"

    cp -r ${srcdir}/Crowsec-Welcome/src/crowsec-welcome.py "${pkgdir}/usr/bin/crowsec-welcome"
    chmod +x "${pkgdir}/usr/bin/crowsec-welcome"

    cp -r ${srcdir}/Crowsec-Welcome/src/crowsec-welcome.desktop "${pkgdir}/etc/skel/.config/autostart/crowsec-welcome.desktop"
    chmod +x "${pkgdir}/etc/skel/.config/autostart/crowsec-welcome.desktop"

    cp -r ${srcdir}/Crowsec-Welcome/src/crowsec-welcome.desktop "${pkgdir}/usr/share/applications/crowsec-welcome.desktop"
}